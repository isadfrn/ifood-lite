generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Users {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  password  String
  admin     Boolean  @default(false)
  image     String?
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")
  orders    Orders[]

  @@map("users")
}

model Products {
  id          String   @id @default(uuid())
  name        String   @unique
  description String
  price       Decimal
  ingredients String
  category    String
  image       String?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  orders      Orders[]

  @@map("products")
}

model Orders {
  id         String     @id @default(uuid())
  totalPrice Decimal    @default(0) @map("total_price")
  payMethod  String     @default("pix") @map("pay_method")
  status     String     @default("pending")
  createdAt  DateTime   @default(now()) @map("created_at")
  updatedAt  DateTime   @updatedAt @map("updated_at")
  products   Products[]
  Users      Users?     @relation(fields: [userId], references: [id])
  userId     String?    @map("user_id")

  @@map("orders")
}

